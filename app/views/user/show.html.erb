<div id="profile_page">
  <div id="user_header">
    <div id="intro">
    <h1><%=@user.full_name%></h1>
    <span id="actions">
      <% if @user.isFriendable?(current_user.id) %>
      <% if @user.isFriend?(current_user.id) %>
      Friends
      <% elsif @user.requestSent?(current_user.id) %>
      Friend Request Sent
    <% else %>
      <%= button_to 'Send Request', url_for(action: "newRequest", controller: "user",reciever_id: @user.id), method: :post  %>
      <% end %>
      <% end %>
    </span>
  </div>
    <div id="user_image">
    <img src=<%=@user.profile_pic_path %>>
  </div>
  </div>
  <div id="rest_user_page">
    <section id="left">
      <div id="user_bio">
        Lives in new Delhi<br>
        blah blah blah<br>
        blah blah blah<br>
        User bio goes here
      </div>
      <div id="user_friends">
        Friend List goes here
      </div>
    </section>
    <section id="right">
    <div id="user_new_post">
      <%= render 'user/postform', post: @post, user_name: current_user.first_name %>
    </div>
    <% @user.wall.each do |post|%>
    <%= render 'home/feedpost', post: post%>
    <% end %>
  </section>
  </div>
</div>
