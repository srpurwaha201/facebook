$('#<%= @comment.post.id%>.post_comments').prepend("<%= escape_javascript (render 'comments/show', comment: @comment) %>");
$('#comment_content').val("");
var new_count = <%= @comment.post.comments.count%>
if(parseInt(new_count) > 1){
  $('div#<%=@comment.post.id%>.comments_info').html(new_count+' comments')
}
else {
    $('div#<%=@comment.post.id%>.comments_info').html(new_count+' comment')
}
