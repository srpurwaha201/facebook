<div class="individual_comment">
  <span class="user_image">
    <img src=<%=current_user.profile_pic_path() %>>
  </span>
  <div class="right">
    <span class="user_email">
      <%= comment.user.full_name %>
    </span>
    <span class="content">
      <%= comment.content %>
    </span>
    <footer class="comment_footer">
      <div class="time">
        <%=time_ago_in_words(comment.created_at)%> ago
      </div>
    </footer>
  </div>
</div>
