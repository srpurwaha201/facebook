<!-- <h2>Sign up</h2> -->
<div id="sign_up_form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div id="signup_form_name">
  <div class="field">
    <!-- <%= f.label :first_name%><br /> -->
    <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name' %>
  </div>

  <div class="field">
    <!-- <%= f.label :last_name %><br /> -->
    <%= f.text_field :last_name, placeholder: 'Surname'%>
  </div>
</div>
  <div class="field">
    <!-- <%= f.label :email %><br /> -->
    <%= f.email_field :email, autofocus: true, placeholder: 'Email Address' %>
  </div>

  <div class="field">
    <!-- <%= f.label :password %> -->
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>
      characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
  </div>

  <div class="field">
    <!-- <%= f.label :password_confirmation %><br /> -->
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>
  </div>
  <div class="field">
      <%= f.label :Birthday %><br>
      <div id="date_select">
      <%= f.date_select :birthday, {order: [:day, :month, :year],start_year: Date.today.year - 18, end_year: Date.today.year - 100},{required: true} %>
    </div>
    </div>
  <div class="actions">
    <%= f.submit "Create an account" %>
  </div>
  <% end %>
</div>
