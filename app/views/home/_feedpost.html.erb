
<div class="post">
<header>
  <section class="left">
  <div class="profile_picture">
  <% if post.user.profile_picture %>
  <img src="/uploads/<%=post.user.profile_picture %>">
  <% else %>
  <img src="default_profile_image.png">
  <% end %>
</div>
  <div class="user_email">
<%= User.find(post.user_id).email %>
</div>
</section>
<section class="right">
<div class="time">
<% time = post.timediff() %>
<% if time[:type] == "seconds" %>
  Just now
<% else %>
  <%= time[:diff] %>
  <% if time[:diff] == 1 %>
    <%= time[:type].slice(0,time[:type].length - 1) %>
  <% else %>
    <%= time[:type] %>
  <% end %>
  ago
<% end %><br>
</div>
</section>
</header>
<%= post.content %><br>
<footer class="comments">
  <div class="comment_form">
      <%= render 'comments/form', post: post %>
  </div>
  <div classs="post_comments">
<% post.comments.each do |comment| %>
    <%= render 'comments/show', comment: comment %><br>
<% end %>
</div>
</footer>
</div>
